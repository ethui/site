{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",

    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "rewriteRelativeImportExtensions": true,

    "baseUrl": ".",
    "paths": {
      "#/*": ["./app/*"]
    }
  }
}
